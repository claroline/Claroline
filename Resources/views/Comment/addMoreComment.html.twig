{% block dropzone_add_comment %}

    <h3>{{ 'Add comment'|trans({}, 'innova_collecticiel') }}</h3>
    <div class="container">
        <form class="form-horizontal" role="form" method="POST" {{ form_enctype(form) }}
        action="{{ path('innova_collecticiel_add_more_comment') }}">
            {{ form(formComment) }}
            <input class="form-control" type="hidden" value="88888" name="arrayDocsToView" id="arrayDocsToView" />
            <hr>
        </form>
    </div>
{% endblock %}

{% block stylesheets %}
    <style>
        .column-container-div {
            text-align: center;
        }
        .direct-chat-warning .right > .direct-chat-text {
            background: none repeat scroll 0 0 #F39C12;
            border-color: #F39C12;
            color: #FFFFFF;
        }
    </style>
    <link href="{{ asset("bundles/innovacollecticiel/css/adminLte.css") }}" rel="stylesheet" />
{% endblock %}
