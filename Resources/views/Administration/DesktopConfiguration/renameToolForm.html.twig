<div id="import-modal" class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <h3>{{ 'rename'|trans({}, 'platform') }} </h3>
        </div>
        {% form_theme form 'ClarolineCoreBundle::form_theme_translate_tools_value.html.twig' %}
        <form
            id="edit-tool-name"
            role="form"
            class="form-horizontal"
            action="{{ path('claro_administration_desktop_order_tool_edit', {'tool': tool.getId()}) }}" method="post" {{ form_enctype(form) }}>
            <div class="panel-body">
                {{ form_widget(form) }}
            <div class="panel-footer">
                <button type="submit" class="btn btn-primary">OK</button>
                <div class="btn btn-default" data-dismiss="modal">{{'cancel'|trans({}, 'agenda') }}</div>
            </div>
        </form>
    </div>
</div>
