{% extends "ClarolineCoreBundle:Administration\\Facet:facetModalForm.html.twig" %}

{% block header %}
    {{ 'edit_facet'|trans({}, 'platform') }}
{% endblock %}

{% block explanation %}
    <div class="well">
        {{ 'visible_facet_form_explanation'|trans({}, 'platform') }}
    </div>
{% endblock %}

{% block form %}
    <form role="form" class="form-horizontal" action="{{ path('claro_admin_facet_edit', {'facet': facet.getId()}) }}" method="post" {{ form_enctype(form) }} id="form_facet_edit">
        <div class="modal-body">
            {{ form_widget(form) }}
        </div>
        <div class="modal-footer">
            <button id="submit-facet-edit-form" class="btn btn-primary" aria-hidden="true">{{ 'edit'|trans({}, 'platform') }}</button>
            <div class="btn btn-default" data-dismiss="modal" aria-hidden="true">{{ 'cancel'|trans({}, 'platform') }}</div>
        </div>
    </form>
{% endblock %}