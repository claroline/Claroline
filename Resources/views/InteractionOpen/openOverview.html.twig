{% extends "ClarolineCoreBundle:Desktop:layout.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('bundles/ujmexo/css/paper.css') }}" type="text/css" rel="stylesheet" />
{% endblock %}

{% block title %} {{ 'correction' | trans }} {% endblock %}



{% block section_content %}
    
<div name="title">
    {{ interOpen.interaction.question.title}}
</div>

<div name="description">
    {{ interOpen.interaction.question.description|raw}}
</div>

<div name="invite">
    {{ interOpen.interaction.invite|raw}}
</div>

<div name="response">
    {{ 'your answer' | trans }}:
    <br/><br/>
    <div>
        {% if interOpen.typeopenquestion == 'long' %}
            {{ response|raw}}
        {% endif %}
    </div> 
</div>    
   
<div name="feddback">
    {{ interOpen.interaction.feedback|raw}}
</div>
<br/><br/>     

{% if penalty > 0 %}
    {{ 'penalty' | trans }}: {{ penalty }}<br/>
{% endif %}
{% if tempMark == true %}
    {{ 'not yet mark' | trans }}: {{ score }}
{% else %}
    {{ 'mark' | trans }}: <span id="score">{{ score }}</span>
{% endif %}

<br/><br/>
<a href="{{ path('ujm_question_index') }}">{{ 'list of question' | trans }}</a>
{% endblock %}