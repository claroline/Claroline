<link href="{{ asset('bundles/ujmexo/css/tableLayout.css') }}" type="text/css" rel="stylesheet"/>
<link href="{{ asset('bundles/ujmexo/css/errorValidation.css') }}" type="text/css" rel="stylesheet"/>

<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">{{ 'interactionOpen creation' | trans }}</h3>
    </div>
    <form action="{{ path('ujm_interactionopen_create') }}" method="post" {{ form_enctype(form) }}>

        <div class="panel-body">
            {% include "UJMExoBundle:Partial:question.html.twig" %}

            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">{{ 'response' | trans }}</h3>
                </div>
                <div class="panel-body">
                    {{ form_row(form.typeopenquestion) }}

                    <div id="qOpenScoreMaxLongResp">
                        <div class="form-group row">
                            {{ form_label(form.scoreMaxLongResp) }}
                            <div class="col-md-9">
                                {{ form_widget(form.scoreMaxLongResp) }}
                                {{ form_errors(form.scoreMaxLongResp) }}
                            </div>
                        </div>
                    </div>

                    <div id="qOpenOrthography" style="display: none;">
                        <p>
                            {{ form_label(form.orthographyCorrect) }}
                            {{ form_widget(form.orthographyCorrect) }}
                        </p>
                    </div>

                    <!--<div id="qOpenUnit" style="display: none;">
                        <p>
                            {#{ form_row(form.unit) }#}
                        </p>
                    </div>-->

                    <div id="qOpenKeyword" style="display: none;">
                        <p>
                            {{ form_row(form.wordResponses) }}
                        </p>
                    </div>
                </div>

                <div style="display: none;">
                    {{ form_rest(form) }}
                </div>
                {{ form_errors(form) }}
            </div>
        </div>
        <div class="panel-footer">
            <input type="hidden" name="exercise" value="{{ exoID }}" />
            <button type="submit" id="button_submit" class="btn btn-primary">{{ 'create' | trans }}</button>
        </div>
    </form>
</div>

{# tiny MCE #}
{{ tinymce_init() }}

<script type="text/javascript" src="{{ asset('bundles/ujmexo/js/interactionOpen.js') }}"></script>
<script type="text/javascript" src="{{ asset('bundles/ujmexo/js/category_pop.js') }}"></script>
<script type="text/javascript" src="{{ asset('bundles/ujmexo/js/hint.js') }}"></script>

{# functions javascript #}
{% if error is defined %}
    <script type="text/javascript">
        insertStyle();
        newHintEdit('{{ 'hint' | trans }}', '{{ 'penalty' | trans }}', '{{ 'add hint' | trans }}', '{{ 'delete' | trans }}');
    </script>
{% else %}
    <script type="text/javascript">
        insertStyle();
        newHint('{{ 'hint' | trans }}', '{{ 'penalty' | trans }}', '{{ 'add hint' | trans }}', '{{ 'delete' | trans }}');
    </script>
{% endif %}