{% extends 'ClarolineCoreBundle::layout.html.twig' %}

{% block title %}{{ parent() }} - {{ 'my_portfolios'|trans({}, 'icap_portfolio') }}{% endblock %}

{% block breadcrumb %}
    {{
        macros.breadcrumbs([
            {
                'icon': 'fa fa-list-alt',
                'name': 'my_portfolios'|trans({}, 'icap_portfolio'),
                'href': path('icap_portfolio_index')
            }
        ])
    }}
{% endblock %}

{% block content %}
    {{ macros.flashBox() }}
    {% block content_body %}{% endblock %}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets debug=false filter='lessphp, cssmin'  output='css/icapportfolio/style.css'
    "@IcapPortfolioBundle/Resources/views/less/style.less"
    "@IcapPortfolioBundle/Resources/views/less/tabs.less" %}
    <link rel="stylesheet" href="{{ asset_url }}" screen="media"/>
    {% endstylesheets %}
{% endblock %}
