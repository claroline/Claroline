<div id="modal-content" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
                <h3 id="myModalLabel">
                    {{ 'Delete a document'|trans({}, 'icap_dropzone') }}
                </h3>
            </div>
            <div class="modal-body">
                {{ 'Are you sure to want to delete this document'|trans({}, 'icap_dropzone') }}
                {% include "IcapDropzoneBundle:Document:deleteDocumentForm.html.twig" %}
            </div>
            <div class="modal-footer">
                <div class="btn-group">
                    <button type="button" class="btn btn-default" data-dismiss="modal" aria-hidden="true">{{ 'Cancel'|trans({}, 'icap_dropzone') }}</button>
                    <button type="submit" id="form-submit" class="btn btn-danger">
                        {{ 'Delete'|trans({}, 'icap_dropzone') }}
                    </button>
                </div>
            </div>
        </div>
    </div>

    <script type="text/javascript">
        $(document).ready(function () {
            $('.form-buttons').hide();

            $('#form-submit').on('click', function () {
                //I do the "click" on submit button for keep html5 warning
                $('.modal-body button[type="submit"]').trigger('click');
            });
        });
    </script>
</div>