/*
 * JSHint configuration.
 *
 * See http://www.jshint.com/docs for options details.
 *
 * We follow the Douglas Crockford's coding style ("white" option) :
 *
 * See http://javascript.crockford.com/code.html
 */

{
    "browser": true,
    "globals": {
        "$": false,
        "_": false,
        "Claroline": false,
        "Routing": false,
        "Twig": false,
        "Backbone": false,
        "confirm": false,
        "it": false,
        "describe": false,
        "expect": false,
        "beforeEach": false,
        "afterEach": false
    },
    "bitwise": true,
    "camelcase": true,
    "curly": true,
    "devel": true,
    "eqeqeq": true,
    "forin": true,
    "immed": true,
    "indent": 4,
    "latedef": true,
    "newcap": true,
    "noarg": true,
    "noempty": true,
    "nonew": true,
    "plusplus": false,
    "quotmark": true,
    "undef": true,
    "unused": true,
    "strict": true,
    "trailing": true,
    "maxparams": 5,
    "maxdepth": 5,
    "maxstatements": 30,
    "maxcomplexity": 10,
    "maxlen": 120,
    "white": true
}