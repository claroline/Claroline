<?php

/*
 * This script can be used to perform a code analysis locally. It requires
 * PHPMD, PHPCS and PHPCPD to be installed and reachable via the command-line.
 */

$rootDirectory = realpath(__DIR__ . '/../..');
$target = "{$rootDirectory}/src" . (isset($argv[1]) ? "/{$argv[1]}" : '');

echo "\n********************************************************************************";
echo "\n******************************** Mess detector *********************************";
echo "\n********************************************************************************\n\n";
system("phpmd {$target} text {$rootDirectory}/app/dev/config/phpmd.xml --exclude {$rootDirectory}/src/*/*/*/Migrations");
echo "\n********************************************************************************";
echo "\n******************************** Code sniffer **********************************";
echo "\n********************************************************************************\n\n";
system("phpcs --extensions=php --standard={$rootDirectory}/app/dev/config/phpcs.xml {$target}");
echo "\n********************************************************************************";
echo "\n***************************** Copy/paste detector ******************************";
echo "\n********************************************************************************\n\n";
system("phpcpd {$target}");
echo "\n********************************************************************************";
echo "\n*********************************** JSHint *************************************";
echo "\n********************************************************************************\n\n";
system("jshint --config {$rootDirectory}/app/dev/config/jshint.json {$target}");
echo "\n********************************************************************************";
echo "\n********************************************************************************\n\n";
