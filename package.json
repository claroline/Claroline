{
  "name": "claroline",
  "version": "1.0.0",
  "description": "Claroline dev dependencies and scripts",
  "license": "GPL-3.0",
  "repository": "https://github.com/claroline/Claroline",
  "scripts": {
    "install": "php vendor/claroline/distribution/npm-install.php",
    "bower": "node_modules/bower/bin/bower update --allow-root",
    "themes": "node vendor/claroline/distribution/main/core/Resources/server/themes/bin build",
    "old-themes": "node vendor/claroline/distribution/main/core/Resources/server/scripts/build-old-themes",
    "uglify": "for f in web/dist/*.js; do echo \"Uglifying ${f}...\" && ./node_modules/.bin/uglifyjs $f -o $f; done",
    "webpack:stats": "export NODE_ENV=production && rm -rf web/dist/* && npm run dll && node_modules/webpack/bin/webpack.js  --json --config=vendor/claroline/distribution/webpack.prod.js --progress --display-error-details > webpack-stats.json && npm run uglify",
    "watch": "yarn run encore dev --watch --config=vendor/claroline/distribution/webpack.config.dev.js --display-error-details --progress --color --bail",
    "karma": "node_modules/.bin/karma start vendor/claroline/distribution/karma.conf.js",
    "mocha": "./node_modules/mocha/bin/mocha vendor/claroline/distribution/main/core/Resources/server/**/*.test.js",
    "istanbul": "npm run karma -- --single-run --reporters=coverage",
    "webpack": "yarn run encore dev --config=vendor/claroline/distribution/webpack.config.prod.js --display-error-details --progress --color --bail",
    "dll": "yarn run encore production --config=vendor/claroline/distribution/webpack.config.dll.js --progress --colors --display-error-details"
  },
  "dependencies": {
    "claroline-distribution": "file:./vendor/claroline/distribution",
    "filesystem-bower-resolver": "*",
    "bower-resolve-webpack-plugin": "*",
    "webpack": "^3",
    "webpack-dev-server": "^2",
    "webpack-notifier": "*",
    "babel-preset-react": "*",
    "postcss-loader": "*",
    "autoprefixer": "*",
    "babel-preset-es2015": "^6.5.0",
    "html-loader": "*",
    "@symfony/webpack-encore": "*",
    "redux-freeze": "^0.1.4",
    "eslint": "^2.13.1",
    "eslint-plugin-react": "*",
    "assets-webpack-plugin": "*",
    "less": "*",
    "yarn": "*",
    "angular": "1.5.7",
    "karma": "^0.13.22",
    "karma-chrome-launcher": "^1.0.1",
    "karma-coverage": "^1.1.1",
    "karma-mocha": "^1.0.1",
    "karma-webpack": "^1.7.0",
    "mocha": "^2.5.3",
    "react-test-renderer": "^15.6.1",
    "modernizr-loader": "0.0.5",
    "postcss-cli": "^2.5.0",
    "raw-loader": "^0.5.1",
    "redux-mock-store": "^1.1.4",
    "shelljs": "^0.5.3"
  },
  "devDependencies": {
    "bower": "^1.7.7"
  }
}
