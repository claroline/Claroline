{% extends "ClarolineCoreBundle:Resource:layout.html.twig" %}

{% block stylesheets %}
    {{ parent() }}

    <link rel="stylesheet" type="text/css" href="{{ themeAsset('claroline-distribution-plugin-path-path-resource.css') }}" />
{% endblock %}

{% block content %}
    <div
        class="page-container path-container"
        data-resource-node="{{ _resource.resourceNode | api_serialize | json_encode | raw | escape }}"
        data-path="{{ _resource | api_serialize | json_encode | raw | escape }}"
        data-resource-types="{{ resourceTypes | json_encode | raw | escape }}"
        data-evaluation="{{ userEvaluation | api_serialize | json_encode | raw | escape }}"
    >
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script src="{{ hotAsset('dist/claroline-distribution-plugin-path-resource.js') }}"></script>
{% endblock %}
