{% extends "ClarolineCoreBundle:resource:layout.html.twig" %}

{% block stylesheets %}
    {{ parent() }}

    <link rel="stylesheet" type="text/css" href="{{ themeAsset('claroline-distribution-plugin-wiki-wiki-resource.css') }}" />
{% endblock %}

{% block content %}
    <div
            class="page-container wiki-container"
            data-resource-node="{{ _resource.resourceNode | api_serialize | json_encode | raw | escape }}"
            data-wiki="{{ _resource | api_serialize | json_encode | raw | escape }}"
            data-sections="{{ sectionTree | json_encode | raw | escape }}"
            data-export-pdf-enabled="{{ config.getParameter('is_pdf_export_active') | json_encode | raw | escape }}"
    >
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script src="{{ hotAsset('dist/claroline-distribution-plugin-wiki-resource.js') }}"></script>
{% endblock %}
