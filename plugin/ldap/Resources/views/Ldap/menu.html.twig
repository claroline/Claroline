{% extends "ClarolineCoreBundle:Administration:layout.html.twig" %}

{% block title %}{{ parent() ~ ' - ' ~ 'LDAP' | trans({}, 'ldap') | striptags | raw }}{% endblock %}

{% block breadcrumb %}
    {{
        macros.breadcrumbs([
            {
                'icon': 'fa fa-cog',
                'name': 'administration'|trans({}, 'platform'),
                'href': path('claro_admin_index')
            },
            {
                'name': 'parameters'|trans({}, 'platform'),
                'href': path('claro_admin_index')
            },
            {
                'name': 'third_party_authentication'|trans({}, 'platform'),
                'href': path('claro_admin_parameters_third_party_authentication_index')
            },
            {
                'name': 'LDAP'|trans({}, 'ldap'),
                'href': ''
            }
        ])
    }}
{% endblock %}

{% block section_content %}
    <div class="panel-heading">
        <h3 class="panel-title">{{ 'LDAP settings' | trans({}, 'ldap') }}</h3>
    </div>
    <div class="list-group">
        <a class="list-group-item" href="{{ path('claro_admin_ldap_settings') }}">
            {{ 'Servers settings' | trans({}, 'ldap') }}
        </a>
        <a class="list-group-item" href="{{ path('claro_admin_ldap_servers') }}">
            {{ 'Users and groups settings' | trans({}, 'ldap') }}
        </a>
        <a class="list-group-item" href="{{ path('claro_admin_ldap_export') }}">
            {{ 'Export LDAP users' | trans({}, 'ldap') }}
        </a>
    </div>
{% endblock %}
