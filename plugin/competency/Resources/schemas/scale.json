{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "The scale uuid"
    },
    "name": {
      "type": "string",
      "description": "The scale name",
      "minLength": 1
    },
    "labels": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "The level uuid"
          },
          "value": {
            "type": "string",
            "description": "The level name"
          }
        }
      }
    }
  },
  "required": ["id", "name"],
  "claroline": {
    "ids": ["id", "name"]
  }
}
