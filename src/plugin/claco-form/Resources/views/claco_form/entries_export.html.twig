<!DOCTYPE html>

<html>
    <head>
        <meta charset="UTF-8">
    </head>
    <body>
        <table>
            <tr>
                <th>{{ 'id'|trans({}, 'platform') }}</th>
                <th>{{ 'uuid'|trans({}, 'platform') }}</th>
                <th>{{ 'entry_title'|trans({}, 'clacoform') }}</th>

                <th>{{ 'creator'|trans({}, 'platform') }} ({{ 'name'|trans({}, 'platform') }})</th>
                <th>{{ 'creator'|trans({}, 'platform') }} ({{ 'username'|trans({}, 'platform') }})</th>
                <th>{{ 'creator'|trans({}, 'platform') }} ({{ 'email'|trans({}, 'platform') }})</th>

                <th>{{ 'creation_date'|trans({}, 'platform') }}</th>
                <th>{{ 'publication_date'|trans({}, 'clacoform') }}</th>
                <th>{{ 'last_modification'|trans({}, 'platform') }}</th>

                {% for field in fields %}
                    <th>{{ field.getLabel() }}</th>
                {% endfor %}
            </tr>

            {% for entry in entries %}
                <tr>
                    <td>{{ entry['id'] }}</td>
                    <td>{{ entry['uuid'] }}</td>
                    <td>{{ entry['title'] }}</td>

                    <td>{{ entry['author'] }}</td>
                    <td>{{ entry['author_username'] }}</td>
                    <td>{{ entry['author_email'] }}</td>

                    <td>{{ entry['creationDate'] }}</td>
                    <td>{{ entry['publicationDate'] }}</td>
                    <td>{{ entry['editionDate'] }}</td>

                    {% for field in fields %}
                        <td>
                            {% if entry[field.getId()] is defined %}
                                {{ entry[field.getId()] }}
                            {% endif %}
                        </td>
                    {% endfor %}
                </tr>
            {% endfor %}
        </table>
    </body>
</html>
