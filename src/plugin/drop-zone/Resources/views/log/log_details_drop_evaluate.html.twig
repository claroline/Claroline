{% if log.details.result is defined %}
    <h4>{{ ('log_correction')|trans({}, 'log') }}</h4>
    <dl class="dl-horizontal">
        <dt>{{ 'Total grade'|trans({}, 'dropzone') }}</dt>
        <dd>{{ log.details.result }}</dd>
    </dl>
{% endif %}

{% if log.details.drop is defined %}
    <h4>{{ ('log_drop_documents')|trans({}, 'log') }}</h4>

    {% for document in log.details.drop.documents %}
        {% include '@ClarolineDropZone/log/log_details_document.html.twig' with {'document': document} %}
    {% endfor %}
{% endif %}