{% extends '@ClarolineCore/log/view_details.html.twig' %}

{% block logDetailsContext %}
    {{ parent() }}
    {% if constant('Icap\\BlogBundle\\Event\\Log\\LogPostCreateEvent::ACTION') == log.action %}
        {% include '@IcapBlog/log/log_details_post_create.html.twig' %}
    {% elseif constant('Icap\\BlogBundle\\Event\\Log\\LogPostReadEvent::ACTION') == log.action %}
        {% include '@IcapBlog/log/log_details_post_read.html.twig' %}
    {% elseif constant('Icap\\BlogBundle\\Event\\Log\\LogPostUpdateEvent::ACTION') == log.action %}
        {% include '@IcapBlog/log/log_details_post_update.html.twig' %}
    {% elseif constant('Icap\\BlogBundle\\Event\\Log\\LogPostDeleteEvent::ACTION') == log.action %}
        {% include '@IcapBlog/log/log_details_post_delete.html.twig' %}
    {% elseif constant('Icap\\BlogBundle\\Event\\Log\\LogPostPublishEvent::ACTION') == log.action %}
        {% include '@IcapBlog/log/log_details_post_publish.html.twig' %}
    {% elseif constant('Icap\\BlogBundle\\Event\\Log\\LogCommentCreateEvent::ACTION') == log.action %}
        {% include '@IcapBlog/log/log_details_comment_create.html.twig' %}
    {% elseif constant('Icap\\BlogBundle\\Event\\Log\\LogCommentDeleteEvent::ACTION') == log.action %}
        {% include '@IcapBlog/log/log_details_comment_delete.html.twig' %}
    {% elseif constant('Icap\\BlogBundle\\Event\\Log\\LogCommentUpdateEvent::ACTION') == log.action %}
        {% include '@IcapBlog/log/log_details_comment_update.html.twig' %}
    {% elseif constant('Icap\\BlogBundle\\Event\\Log\\LogCommentPublishEvent::ACTION') == log.action %}
        {% include '@IcapBlog/log/log_details_comment_publish.html.twig' %}
    {% endif %}
{% endblock %}
