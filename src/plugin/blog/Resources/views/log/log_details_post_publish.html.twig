{% if log.details.post is defined %}
    {% set eventName = 'log_published_post' %}
    {% if log.details.post.published == false %}
        {% set eventName = 'log_unpublished_post' %}
    {% endif %}
    <h4>{{ eventName|trans({}, 'log') }}</h4>

    <dl class="dl-horizontal">
        <dt>{{ ('log_post_title')|trans({}, 'log') }}</dt>
        <dd>{{ log.details.post.title }}</dd>
    </dl>
{% endif %}
