{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "The group id"
    },
    "name": {
      "type": "string",
      "description": "The group name",
      "minLength": 1
    },
    "code": {
      "type": "string",
      "description": "The group code",
      "minLength": 1
    },
    "meta": {
      "type": "object",
      "properties": {
        "description": {
          "type": ["string", "null"],
          "description": "The group description"
        }
      }
    }
  },
  "claroline": {
    "requiredAtCreation": ["name"],
    "ids":  ["id", "code"]
  }
}
