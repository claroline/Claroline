{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "The material uuid"
    },
    "name": {
      "type": "string",
      "description": "The material name",
      "minLength": 1
    },
    "code": {
      "type": "string",
      "description": "The material code",
      "minLength": 1
    },
    "description": {
      "type": ["string", "null"],
      "description": "The material description"
    }
  },
  "required": ["code", "name"],
  "claroline": {
    "ids": ["id", "code"]
  }
}
