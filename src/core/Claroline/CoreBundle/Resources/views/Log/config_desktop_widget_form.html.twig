{% form_theme form 'ClarolineCoreBundle::form_theme.html.twig' %}

{% import 'ClarolineCoreBundle::macros.html.twig' as macros %}

<style type="text/css">
    #form_log_update_desktop_widget .control-group {
        margin-bottom: 0px;
    }

    #form_log_update_desktop_widget .control-group:last-child {
        margin-top: 40px;
        margin-bottom: 20px;
    }
</style>
<form id="form_log_update_desktop_widget"
    method="POST"
    action="{{ path('claro_log_update_desktop_widget_config', {'isDefault': isDefault, 'redirectToHome': app.request.isXMLHttpRequest ? 1 : 0})}}"

    class="form-horizontal"
    {{ form_enctype(form) }}>
    {% if not isDefault %}
        <legend>{{ 'Choose workspaces displayed in the widget'|trans({}, 'platform') }}</legend>
    {% endif %}

    <fieldset>
        {{ form_widget(form._token) }}
        {{ form_widget(form) }}
    </fieldset>

    {{ macros.flashBox() }}
    <div class="form-actions">
        <button type="submit" class="btn btn-primary">{{ 'ok'|trans({}, 'platform') }}</button>
        <a href="{{ path('claro_admin_widgets') }}">
            <button type="button" class="btn claro-widget-form-cancel">{{ 'cancel'|trans({}, 'platform') }}</button>
        </a>
    </div>
</form>
