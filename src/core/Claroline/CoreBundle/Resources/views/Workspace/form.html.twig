{% extends "ClarolineCoreBundle::layout.html.twig" %}

{% block content %}
    {% form_theme form 'ClarolineCoreBundle::form_theme.html.twig' %}
    <form class="form-horizontal" id="ws_creation_form" action="{{ path('claro_workspace_create') }}" method="post" {{ form_enctype(form) }}>
        <fieldset>
            <legend>{{ 'workspace.create'|trans({}, 'platform') }} :</legend>
            {{ form_widget(form) }}
            <div class="form-actions">
                <button type="submit" class="btn btn-primary">{{ 'ok'|trans({}, 'platform') }}</button>
                <a href="{{ path('claro_workspace_list') }}">
                    <button type="button" class="btn">{{ 'cancel'|trans({}, 'platform') }}</button>
                </a>
            </div>
        </fieldset>
    </form>
{% endblock %}