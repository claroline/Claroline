 {% extends 'ClarolineCoreBundle:Install:layout.html.twig' %}
    {% block content %}
     <div class="span3">
         <h3> Progression</h3>
        <ol class="nav nav-list">
            {%block naviguation %}
            {{ parent() }}
            {%endblock %}
           </ol>
            <div class="progress">
              <div class="bar" style="width: 30%;"></div>
            </div>
    </div>
             <div class="span6">

                  {%block data %}
        <h3> {{ 'system_requirement'|trans({}, 'install') }} </h3>
        <hr />
        <table class="table">
            <thead>
                <tr>
                    <th> {{ 'parameters'|trans({}, 'install') }} </th>
                    <th> {{ 'minimum_value'|trans({}, 'install') }} </th>
                    <th> Votre valeur </th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Php version</td>
                    <td>  5.2</td>
                    <td> {{version.php}}</td>
                </tr>
                <tr>
                    <td>Mysql version</td>
                    <td>  4.xx</td>
                    <td> {{version.mysql}} </td>
                </tr>
                {% for key,value in folders %}
                <tr>
                    <td>{{ 'permission'|trans({}, 'install') }} </td>
                    <td> [{{'folders'|trans({}, 'install')}} {{key}}]</td>
                    <td> {% if value == 'KO'%}
                       <span style="color:#FF0000"> {{value}} </span>
                        {% else %}
                            {{value}}
                         {% endif %}
                    </td>
                </tr>
                {% endfor %}

            </tbody>
        </table>
        <p>
          <a href="{{path('claro_showDbForm',{lg:version.lg})}}" class="btn btn-primary" >{{ 'next'|trans({}, 'install') }} </a>
           <a href="{{path('claro_setup')}}" class="btn" > {{ 'back'|trans({}, 'install') }} </a>
          </p>

{%endblock data %}
        </div>
            <div class="span2">
                <h3> {{ 'hint'|trans({}, 'install') }}</h3>
                <div class="action">
                    <div class="well">
                   {{ 'hint_1'|trans({}, 'install') }}
               </div>
                    </div>
                </div>
            <div class="span12">

        </div>

   </div>

{% endblock %}
