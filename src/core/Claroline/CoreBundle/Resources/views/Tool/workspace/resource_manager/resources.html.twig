        "@ClarolineCoreBundle/Resources/views/Resource/thumbnail.html.twigjs"
        "@ClarolineCoreBundle/Resources/views/Resource/results.html.twigjs"
        "@ClarolineCoreBundle/Resources/views/Resource/roles.html.twigjs"
