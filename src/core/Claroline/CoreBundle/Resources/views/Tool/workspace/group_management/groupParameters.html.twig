{% extends 'ClarolineCoreBundle:Workspace:layout.html.twig' %}
{% block javascripts %}
{% endblock %}
{% block section_content %}

    {{
        macros.breadcrumbs([
            {
                'icon': 'icon-th-list',
                'name': 'group_management'|trans({}, 'tools'),
                'href': path('claro_workspace_open_tool', {'workspaceId': workspace.getId(), 'toolName': 'group_management'})
            },
            {
                'name': 'group_management'|trans({}, 'tools'),
                'href': ''
            }
        ])
    }}

    <form class="form-horizontal" action="{{path('claro_workspace_tools_edit_group_parameters',{'workspaceId':workspace.getId(), 'groupId':group.getId()})}}" method="post" {{ form_enctype(form) }} id="user-parameters">
        <fieldset>
            <legend>{{ 'group_parameter'|trans({}, 'platform') }} :</legend>
            {{ form_widget(form) }}
            <div class="form-actions">
                <button type="submit" class="btn btn-primary">{{ 'ok'|trans({}, 'platform') }}</button>
                <a href="{{ path('claro_admin_group_list') }}">
                    <button type="button" class="btn">{{ 'cancel'|trans({}, 'platform') }}</button>
                </a>
            </div>
        </fieldset>
    </form>
{% endblock %}
