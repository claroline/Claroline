{% extends 'ClarolineCoreBundle::layout.html.twig' %}

{% block content %}

    <div id="homePath" class="hide">{{ path("claro_index") }}</div>

    {% if region['header'] is defined %}
        <div class="row-fluid">
            {{  region['header'] | raw }}
        </div>
    {% endif %}

    <div class="row-fluid">
        {% if region['left'] is defined or is_granted('ROLE_ADMIN') %}
            <div class="span3">
                {% if is_granted('ROLE_ADMIN') %}
                    <div class="content-element relative span12">
                        <ul class="nav nav-tabs nav-stacked">
                            <li class="disabled"><a><b>{{ "Content Administration" | trans({}, "home") }}</b></a></li>
                            <li class="content-element relative{{ "/type/menu" | compareRoute(" active") }}">
                                <a href="{{ path("claro_get_content_by_type", { "type": "menu"}) }}">
                                    <i class="icon-th-list"></i> {{ "Menus" | trans({}, "home") }}
                                    <i class="icon-chevron-right pull-right"></i>
                                </a>
                            </li>
                            <li class="content-element relative{{ "/types" | compareRoute(" active") }}">
                                <a href="{{ path("claroline_types_manager") }}">
                                    <i class="icon-th-large"></i> {{ "Content" | trans({}, "home") }}
                                    <i class="icon-chevron-right pull-right"></i>
                                </a>
                            </li>
                        </ul>
                    </div>
                {% endif %}
                {{ region['left'] | raw }}
            </div>
        {% endif %}

        <div class="{% if
                (is_granted('ROLE_ADMIN') or region['left'] is defined) and
                region['right'] is defined %}span6{% elseif (is_granted('ROLE_ADMIN') or region['left'] is defined) or
                    region['rigth'] is defined %}span9{% else %}span12{% endif %}">
            {% if region['content'] is defined %}
                {{ region['content'] | raw }}
            {% endif %}

            {{ content | raw }}
        </div>

        {% if region['right'] is defined %}
            <div class="span3">
                {{ region['right'] | raw }}
            </div>
        {% endif %}
    </div>

    {% if region['footer'] is defined %}
        <hr>
        <div class="row-fluid">
            {{  region['footer'] | raw }}
        </div>
    {% endif %}

{% endblock %}

{% block javascripts %}
    {{ parent() }}
        <script type="text/javascript" src="{{ asset('bundles/frontend/fluidvids/fluidvids.js') }}"></script>
        <script type="text/javascript" src="{{ asset('bundles/frontend/jquery/jquery-ui-1.9.2.custom/js/jquery-ui-1.9.2.custom.js') }}"></script>
        <script type="text/javascript" src="{{ asset('bundles/clarolinecore/js/home/height.js') }}"></script>
        {% if is_granted('ROLE_ADMIN') %}
            <script type="text/javascript" src="{{ asset('bundles/clarolinecore/js/home/content.js') }}"></script>
        {% endif %}
{% endblock %}
