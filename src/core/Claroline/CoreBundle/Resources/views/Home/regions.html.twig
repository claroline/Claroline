<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title">{{ "Content regions" | trans({}, "home") }}</h4>
        </div>
        <div class="modal-body" data-id="{{ id }}">
            <div class="row">
                <div class="col-lg-12"><div class="panel" data-region="header">{{ "Header" | trans({}, "home") }}</div></div>
                <div class="col-lg-4"><div class="panel" data-region="left">{{ "Left" | trans({}, "home") }}</div></div>
                <div class="col-lg-4"><div class="panel" data-region="content">{{ "Content" | trans({}, "home") }}</div></div>
                <div class="col-lg-4"><div class="panel" data-region="right">{{ "Right" | trans({}, "home") }}</div></div>
                <div class="col-lg-12"><div class="panel" data-region="footer">{{ "Footer" | trans({}, "home") }}</div></div>
            </div>
        </div>
    </div>
</div>
