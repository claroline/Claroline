<div class="creator" data-type="{{ type }}" {% if content is defined %}data-id="{{ content.id }}"{% endif %}>
    <div class="row">
        <div class="col-lg-12">
            <input
            type="text"
            placeholder="{{ "Optional title" | trans({}, 'home') }}..."
            class="form-control content-title"
            {% if content is defined %}value="{{ content.title }}"{% endif %}
            >
        </div>
    </div>
    <br>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel">
                <textarea
                    class="form-control content-text"
                    placeholder="{{ "Create" | trans({}, 'home') }} {{ "a content" | trans({}, 'home') }}..."
                    >{% if content is defined %}{{ content.content }}{% endif %}</textarea>
                <div class="generated">
                    {% if content.generatedContent is defined and content.generatedContent != "" %}
                        <button type="button" class="close">Ã—</button>
                        <div class="generated-content">
                            {{ content.generatedContent | raw }}
                        </div>
                    {% endif %}
                </div>
                <div class="navbar navbar-static-top">

                    <!--<ul class="nav">
                        <li><a href="#"><i class="icon-picture"></i> {{ "Add Pictures" | trans({}, 'home') }}</a></li>
                        <li><a href="#"><i class="icon-paper-clip"></i> {{ "Add Files" | trans({}, 'home') }}</a></li>
                        <li class="divider-vertical"></li>
                    </ul>-->
                    <form class="navbar-form pull-right">
                        {% if content is defined %}
                            <button class="cancel-button btn btn-default">{{ 'Cancel' | trans({}, 'home') }}</button>
                            <button class="edit-button btn btn-primary">{{ 'Edit' | trans({}, 'home') }}</button>
                        {% else %}
                            <button class="creator-button btn btn-primary">{{ 'Create' | trans({}, 'home') }}</button>
                        {% endif %}
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>
