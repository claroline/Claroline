{% extends "ClarolineCoreBundle::layout.html.twig" %}

{% block content %}
    {% form_theme profile_form 'ClarolineCoreBundle::form_theme.html.twig' %}
    <form class="form-horizontal" action="{{ path('claro_profile_update') }}" method="post" {{ form_enctype(profile_form) }} id="profile_form">
        <fieldset>
            <legend>{{ 'my_account'|trans({}, 'platform') }} :</legend>
            {{ form_widget(profile_form) }}
            <div class="form-actions">
                <button type="submit" class="btn btn-primary">{{ 'ok'|trans({}, 'platform') }}</button>
            </div>
        </fieldset>
    </form>
{% endblock %}