<form id="login-form" class="form-horizontal" action="{{ path('claro_security_login_check') }}" method="post">
    <div class="panel-body">
        <div class="control-group">
            <label class="control-label" for="username">{{ 'username'|trans({}, 'platform') }} :</label>
            <div class="controls">
                <input type="text" id="username" name="_username" required="required"/>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="username">{{ 'password'|trans({}, 'platform') }} :</label>
            <div class="controls">
                <input type="password" id="password" name="_password" required="required" />
            </div>
        </div>
    </div>
    <div class="panel-footer">
        <button type="submit" class="btn btn-primary">{{ 'login'|trans({}, 'platform') }}</button>
    </div>
</form>
