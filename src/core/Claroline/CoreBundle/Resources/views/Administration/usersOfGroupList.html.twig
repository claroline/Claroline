{% macro renderPager(search, groupId, pager) %}
    {% if search == '' %}
    {{
        pagerfanta(
            pager,
            'twitter_bootstrap_translated',
            {
                'proximity' : 1,
                'routeName': 'claro_admin_user_of_group_list',
                'routeParams': {'groupId': groupId}
            }
        )
    }}
    {% else %}
        {{
            pagerfanta(
                pager,
                'twitter_bootstrap_translated',
                {
                    'proximity' : 1,
                    'routeName': 'claro_admin_user_of_group_list_search',
                    'routeParams': {'search': search, 'groupId': groupId}
                }
            )
        }}
    {% endif %}
{% endmacro %}

{% macro displayControls(group) %}
    {% if app.user %}
        <a class="btn btn-default" href="{{ path('claro_admin_outside_of_group_user_list', {'groupId' : group.getId()}) }}"><i class="icon-plus"></i> {{ 'add_user'|trans({}, 'platform') }}</a>
        <a class="btn btn-default" id="link-send-message" href="{{ path('claro_message_form_for_group', {'group': group.getId()}) }}"><i class="icon-envelope"></i> {{ 'send_message'|trans({}, 'platform') }}</a>
        <button class="btn btn-default action-button" data-action="remove"><i class="icon-trash"></i> {{ 'delete'|trans({}, 'platform') }}</button>
        <a class="btn btn-default" id="import-users-into-group" href="{{ path('claro_admin_import_users_into_group_form', {'groupId': group.getId()}) }}"><i class="icon-user"></i> {{ 'import_users'|trans({}, 'platform') }}</a>
    {% endif %}
{% endmacro %}

{% from _self import renderPager %}
{% from _self import displayControls %}

{% extends "ClarolineCoreBundle:Administration:layout.html.twig" %}

{% block javascripts %}
    {{ parent() }}
    {% javascripts
        vars=["locale"]
        "@ClarolineCoreBundle/Resources/views/ConfirmationMessage/removeUserConfirm.html.twigjs"
        "@ClarolineCoreBundle/Resources/views/Modal/modal.html.twigjs"
        "@ClarolineCoreBundle/Resources/views/Modal/validationFooter.html.twigjs"
        filter="twig_js"
    %}
    <script language="javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
    <script src='{{ asset('bundles/clarolinecore/js/table.js') }}' type="text/javascript"></script>
    <script>
        parameters = {};
        parameters.route = {};
        parameters.route.action = {};
        parameters.route.normal = {"route": "claro_admin_user_of_group_list", "parameters": {'groupId': {{ group.getId() }} }};
        parameters.route.search = {"route": "claro_admin_user_of_group_list_search", "parameters": {'groupId': {{ group.getId() }}}};
        parameters.route.action.remove = {"route": "claro_admin_multidelete_user_from_group", "parameters": {'groupId': {{ group.getId() }}}, "type": "DELETE", "confirmTemplate": removeUserConfirm };
        Claroline.Table.initialize(parameters);
    </script>
{% endblock %}

{% block section_content %}
    <div>
        {{ macros.flashBox() }}
    </div>
    {{
        macros.breadcrumbs([
            {
                'icon': 'icon-user',
                'name': 'users_management'|trans({}, 'platform'),
                'href': path('claro_admin_users_management')
            },
            {
                'name': 'groups_list'|trans({}, 'platform'),
                'href': path('claro_admin_group_list')
            },
            {
                'name':  group.getName(),
                'href': ''
            }
        ])
    }}
    <div class="search-bar row">
        <div class="col-md-6">
            {{ displayControls(group) }}
        </div>
        <div class="col-md-6">
             <div class="input-group">
                <input class="form-control" type="text" id="search-items-txt" placeholder="{{ 'search'|trans({}, 'platform') }}">
                <span class="input-group-btn">
                    <button class="filter btn btn-default" type="button" id="search-button">
                        <i class="icon-search"></i>
                    </button>
                </span>
            </div>
        </div>
    </div>

    </div>
        {{ renderPager(search, group.getId(), pager) }}
    <div>
    <table class="table table-striped table-bordered table-condensed">
        <thead>
            <tr>
                <th>{{ 'id'|trans({}, 'platform') }}</th>
                <th>{{ 'username'|trans({}, 'platform') }}</th>
                <th>{{ 'last_name'|trans({}, 'platform') }}</th>
                <th>{{ 'first_name'|trans({}, 'platform') }}</th>
                <th> <input type="checkbox" name="all" id="check-all-items"></input> </th>
            </tr>
        </thead>
        <tbody id="user-table-body">
            {% for user in pager.currentPageResults %}
                <tr id="row-user-{{ user.getId() }}" class="row-user">
                    <td>{{ user.getId() }}</td>
                    <td>{{ user.getUsername() }}</td>
                    <td>{{ user.getLastName() }}</td>
                    <td>{{ user.getFirstName() }}</td>
                    <td>
                        <input type="checkbox" value="{{ user.id }}" class="chk-item" align="center"></input>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    {{ renderPager(search, group.getId(), pager) }}
    {{ displayControls(group) }}
{% endblock %}
