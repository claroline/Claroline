{% macro renderPager(search, groupId, pager) %}
    {% if search == '' %}
    {{
        pagerfanta(
            pager,
            'twitter_bootstrap_translated',
            {
                'proximity' : 1,
                'routeName': 'claro_admin_user_of_group_list',
                'routeParams': {'groupId': groupId}
            }
        )
    }}
    {% else %}
        {{
            pagerfanta(
                pager,
                'twitter_bootstrap_translated',
                {
                    'proximity' : 1,
                    'routeName': 'claro_admin_user_of_group_list_search',
                    'routeParams': {'search': search, 'groupId': groupId}
                }
            )
        }}
    {% endif %}
{% endmacro %}

{% from _self import renderPager %}

{% extends "ClarolineCoreBundle:Administration:layout.html.twig" %}

{% block javascripts %}
    {{ parent() }}
    {% javascripts
    vars=["locale"]
    "@ClarolineCoreBundle/Resources/views/ConfirmationMessage/remove_user_confirm.html.twigjs"
    filter="twig_js"
    %}

    <script language="javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
    <script src="{{ asset('bundles/clarolinecore/js/administration/usersOfGroupList.js') }}" type="text/javascript"></script>
{% endblock %}

{% block section_content %}
    <div class="margin">
        <h3 class="sub-section-header">{{ 'group'|trans({}, 'platform') }} "{{ group.getName() }}" : {{ 'users'|trans({}, 'platform') }}</h3>

        <div class="search-bar">
            <a id="link_add_user_to_group" class="btn btn-secondary" href="{{ path('claro_admin_outside_of_group_user_list', {'groupId' : group.getId()}) }}"><i class="icon-plus"></i> {{ 'add_user'|trans({}, 'platform') }}</a>
            <button class="btn btn-secondary delete-users-button"><i class="icon-trash"></i> {{ 'delete'|trans({}, 'platform') }}</button>
            <a class="btn btn-secondary" id="link-send-message" href="{{ path('claro_message_form_for_group', {'groupId': group.getId()}) }}"><i class="icon-envelope"></i> {{ 'send_message'|trans({}, 'platform') }}</a>

            <div class="input-append pull-right">
                <input class="input-medium" type="text" id="search-user-txt" placeholder="{{ 'search'|trans({}, 'platform') }}">
                <button class="filter btn" type="button" id="search-user-button">
                    <i class="icon-search"></i>
                </button>
            </div>

        </div>
        </div>
            {{ renderPager(search, group.getId(), pager) }}
        <div>
        <table class="table table-striped table-bordered table-condensed">
            <thead>
                <tr>
                    <th>{{ 'id'|trans({}, 'platform') }}</th>
                    <th>{{ 'username'|trans({}, 'platform') }}</th>
                    <th>{{ 'last_name'|trans({}, 'platform') }}</th>
                    <th>{{ 'first_name'|trans({}, 'platform') }}</th>
                    <th></th>
                </tr>
            </thead>
            <tbody id="user-table-body">
                {% for user in pager.currentPageResults %}
                    <tr id="row-user-{{ user.getId() }}" class="row-user">
                        <td>{{ user.getId() }}</td>
                        <td>{{ user.getUsername() }}</td>
                        <td>{{ user.getLastName() }}</td>
                        <td>{{ user.getFirstName() }}</td>
                        <td>
                            <input type="checkbox" value="{{ user.id }}" class="chk-user" align="center"></input>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        </div>
            {{ renderPager(search, group.getId(), pager) }}
        <div>
        <div id="twig-attributes" data-group-id="{{ group.getId() }}">
        </div>
        <p>
            <a id="link_add_user_to_group" class="btn btn-secondary" href="{{ path('claro_admin_outside_of_group_user_list', {'groupId' : group.getId()}) }}"><i class="icon-plus"></i> {{ 'add_user'|trans({}, 'platform') }}</a>
            <button class="btn btn-secondary delete-users-button"><i class="icon-trash"></i> {{ 'delete'|trans({}, 'platform') }}</button>
            <a class="btn btn-secondary" id="link-send-message" href="{{ path('claro_message_form_for_group', {'groupId': group.getId()}) }}"><i class="icon-envelope"></i> {{ 'send_message'|trans({}, 'platform') }}</a>

        </p>

    </div>

    <!-------------- modal box ------------------------------------------------>
    <div id="validation-box" class="modal hide fade">
        <div class="modal-header">
        </div>
        <div class="modal-body" id="modal-body">
            <div id="validation-box-body"></div>
        </div>
        <div class="modal-footer">
            <input type="button" id="modal-valid-button" class="btn btn-primary" value="{{ 'ok'|trans({}, 'platform') }}"/>
            <input type="button" id="modal-cancel-button" class="btn btn-secondary" value="{{ 'cancel'|trans({}, 'platform') }}"/>
        </div>
    </div>
{% endblock %}
