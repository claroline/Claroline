{% extends "ClarolineCoreBundle:Administration:layout.html.twig" %}

{% block javascripts %}
    {{ parent() }}
    <script
        src='{{ asset('bundles/clarolinecore/js/administration/listAddableWidgets.js') }}'
        type="text/javascript">
    </script>
{% endblock %}

{% block breadcrumb %}
    {{
        macros.breadcrumbs([
            {
                'icon': 'icon-cog',
                'name': 'administration'|trans({}, 'platform'),
                'href': path('claro_admin_index')
            },
            {
                'name': 'home_tabs'|trans({}, 'platform'),
                'href': path('claro_admin_home_tabs_configuration')
            },
            {
                'name': 'home_tab_widgets'|trans({}, 'platform'),
                'href': path('claro_admin_home_tab_widgets_configuration', {'homeTabId': homeTab.getId()})
            },
            {
                'name': 'available_widgets'|trans({}, 'platform'),
                'href': ''
            }
        ])
    }}
{% endblock %}

{% block section_content %}

    <div class="panel-heading">
        <h3 class="panel-title">
            {{ 'add_widget_to_home_tab'|trans({}, 'platform') }}
        </h3>
    </div>
    <div class="panel-body">
        <ul class="nav nav-tabs">
            <li class="active"><a href="#">{{ homeTab.getName() }}</a></li>
        </ul>
        <br>
        <br>

        <div id="twig-home-tab-id" data-home-tab-id="{{ homeTab.getId() }}"></div>

        <table class="table table-striped table-bordered table-condensed">
            <thead>
                <tr>
                    <th>{{ 'widget'|trans({}, 'platform') }}</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {% for widgetDisplayConfig in widgetDisplayConfigs %}
                {% set widget = widgetDisplayConfig.getWidget() %}
                <tr>
                    <td>
                        {{ widget.getName()|trans({}, 'widget') }}
                    </td>
                    <td>
                        <input type="checkbox"
                            class="chk-widget"
                            value="{{ widget.getId() }}"
                        >
                    </td
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    <div class="panel-footer">
        <button id="widget-validate-button" class="btn btn-primary">
            {{ 'ok'|trans({}, 'platform') }}
        </button>
        <a class="btn btn-default"
            href="{{ path('claro_admin_home_tab_widgets_configuration', {'homeTabId': homeTab.getId()}) }}"
        >
            {{ 'cancel'|trans({}, 'platform') }}
        </a>
    </div>

{% endblock %}