{% extends "ClarolineCoreBundle:Administration:layout.html.twig" %}

{% block section_content %}
    <div class="panel-heading">
        <h3 class="panel-title">{{ 'users_import'|trans({}, 'platform') }}</h3>
    </div>
    <form class="form-horizontal" action="{{ path('claro_admin_import_users') }}" method="post" {{ form_enctype(form) }} >
        <div class="panel-body">
            {{
                macros.breadcrumbs([
                    {
                        'icon': 'icon-user',
                        'name': 'users_management'|trans({}, 'platform'),
                        'href': path('claro_admin_users_management')
                    },
                    {
                        'name':'users_list'|trans({}, 'platform'),
                        'href':path('claro_admin_user_list')
                    },
                    {
                        'name':'import'|trans({}, 'platform'),
                        'href':''
                    }
                ])
            }}
            <div>{{ macros.flashBox() }}</div>
            {% form_theme form 'ClarolineCoreBundle::form_theme.html.twig' %}
            {{ form_widget(form) }}
        </div>
        <div class="panel-footer">
            <button type="submit" class="btn btn-primary">{{ 'ok'|trans({}, 'platform') }}</button>
            <a href="{{ path('claro_admin_user_list') }}" class="btn btn-default">
                {{ 'cancel'|trans({}, 'platform') }}
            </a>
        </div>
    </form>
{% endblock %}
