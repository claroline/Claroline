{% extends "ClarolineCoreBundle:Administration:layout.html.twig" %}

{% block javascripts %}
    {{ parent() }}
    <script
        src="{{ asset('bundles/clarolinecore/js/administration/registrationManagementSubjectList.js') }}"
        type="text/javascript"
    >
    </script>
{% endblock %}

{% block section_content %}
    <div class="panel-heading">
        <h3 class="panel-title">{{ 'registration_to_workspaces'|trans({}, 'platform') }}</h3>
    </div>
    <div class="panel-body" id="registration-list-div" subject-type="group">
        <div>
            <div id="custom-flashbag-div" class="alert alert-success hide">
                <a id="flashbag-close-button" class="close" href="#">Ã—</a>
                <ul id="custom-flashbag-ul">
                </ul>
            </div>
            {{
                macros.breadcrumbs([
                    {
                        'icon': 'icon-book',
                        'name':'registration_to_workspaces'|trans({}, 'platform'),
                        'href': path('claro_admin_registration_management')
                    },
                    {
                        'name':'groups'|trans({}, 'platform'),
                        'href': ''
                    }
                ])
            }}
        </div>

        <h3>{{ 'select_groups_for_registration_to_workspace'|trans({}, 'platform') }}</h3>
        <br>

        {% include 'ClarolineCoreBundle:Administration:registrationManagementSelectedWorkspacesAndRoles.html.twig' %}

        <br>
        <div class="search-bar row">
            <div class="col-md-6">
                <button class="btn btn-default subscribe-subjects-button" disabled="disabled">
                    <i class="icon-pencil"></i>
                    {{ 'subscribe_selected_groups'|trans({}, 'platform') }}
                </button>
            </div>
            <div class="col-md-6">
                 <div class="input-group">
                    <input class="form-control" type="text" id="search-txt" placeholder="{{ 'search_group'|trans({}, 'platform') }}">
                    <span class="input-group-btn">
                        <button class="filter btn btn-default" type="button" id="search-button">
                            <i class="icon-search"></i>
                        </button>
                    </span>
                </div>
            </div>
        </div>

        <div id="pager-block">
            <div id="list-pager" class="list-pager">
                {% include 'ClarolineCoreBundle:Administration:groupListPager.html.twig' %}
            </div>
        </div>
        <button class="btn btn-default subscribe-subjects-button" disabled="disabled">
            <i class="icon-pencil"></i>
            {{ 'subscribe_selected_groups'|trans({}, 'platform') }}
        </button>
    </div>
{% endblock %}
