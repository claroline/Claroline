<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4>{{ "Delete" | trans({}, "theme") }}</h4>
        </div>
        <div class="modal-body">
            <p>{{ "Are you sure you want to delete this theme?" | trans({}, "theme") }}</p>
            <p>{{ "This action is irreversible" | trans({}, "theme") }}.</p>
        </div>
        <div class="modal-footer">
            <a class="btn btn-default" data-dismiss="modal">{{ "Cancel" | trans({}, "theme") }}</a>
            <a class="btn delete btn-primary" data-dismiss="modal">{{ "Delete" | trans({}, "theme") }}</a>
        </div>
    </div>
</div>
