{% extends 'ClarolineCoreBundle:Install:layout.html.twig' %}
{% block content %}
<div class="col-md-3">
    <h3> Progression</h3>
    <ol class="nav nav-list">
     {%block naviguation %}
        {%endblock %}
    </ol>
    <p>  Progression</p>
    <div class="progress">
        <div class="bar" style="width: 100%;"></div>
    </div>
</div>
<div class="col-md-6">
    <h3>Installation reussie</h3>
    {%block data %}
       <div class="alert alert-success">
            <p>{{ 'sucess'|trans({}, 'install') }} </p>
        </div>
        <p> <a href="{{path('claro_index')}}" class="button"> {{ 'home'|trans({}, 'install') }}</a></p>
    {%endblock data %}
</div>
<div class="col-md-2">
    <h3> {{ 'hint'|trans({}, 'install') }}</h3>
    <div class="action">

    </div>

    </div>
<div class="col-md-12">

{% if app.session.getFlashes() is defined %}
    <div class="alert alert-danger">
    {% for key, flash in app.session.getFlashes() %}
        {{ flash }} <br />
    {% endfor %}
    </div>
{% endif %}

</div>

</div>

{% endblock %}
