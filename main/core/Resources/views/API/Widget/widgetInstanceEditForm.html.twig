{% extends "ClarolineCoreBundle:API:modal.html.twig" %}

{% block header %}
    {{ 'widget_configuration'|trans({}, 'platform') }} - ({{ instance.getWidget().getName() | trans({}, 'widget') }})
{% endblock %}

{% block form %}
    {% form_theme form 'ClarolineCoreBundle::form_theme_angular.html.twig' %}
    <div class="modal-body">
        <form role="form"
              class="form-horizontal"
              method="put"
              {{ form_enctype(form) }}
              novalidate
              autocomplete="off"
        >
            {{ form_widget(form) }}
        </form>

        {% if extraInfos %}
            <hr>
            {{ '<div ng-bind-html="wfmc.contentConfig"></div>' }}
        {% endif %}
    </div>
    <div class="modal-footer">
        <div class="btn btn-default" data-dismiss="modal" ng-click="$close()">
            {{ 'cancel'|trans({}, 'platform') }}
        </div>
        <button type="submit" class="btn btn-primary" ng-click="wfmc.submit($scope)">
            {{ 'ok'|trans({}, 'platform') }}
        </button>
    </div>
{% endblock %}
