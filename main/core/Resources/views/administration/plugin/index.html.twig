{% extends "ClarolineCoreBundle:administration:layout.html.twig" %}

{% block title %}{{ parent() ~ ' - ' ~ 'plugins' | trans({}, 'platform') | striptags | raw }}{% endblock %}
{% import 'ClarolineCoreBundle::macros.html.twig' as macros %}
{% block breadcrumb %}
{{
    macros.breadcrumbs([
        {
            'icon': 'fa fa-cog',
            'name': 'administration'|trans({}, 'platform'),
            'href': path('claro_admin_parameters_index')
        },
        {
            'name': 'parameters'|trans({}, 'platform'),
            'href': path('claro_admin_parameters_index')
        },
        {
            'name': 'plugins'|trans({}, 'platform'),
            'href': ''
        }
    ])
}}
{% endblock %}

{% block page_title %}
    {{ 'parameters' | trans({}, 'platform') }}
    <small>{{ 'plugins' | trans({}, 'platform') }}</small>
{% endblock %}
{% block page_content %}
    <div id="plugin-panel" data-ng-app="PluginManager">
        <plugin-manager></plugin-manager>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ hotAsset('dist/claroline-distribution-main-core-plugin-management.js') }}"></script>
{% endblock %}
