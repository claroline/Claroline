{% extends "ClarolineCoreBundle:administration:layout.html.twig" %}

{% block title %}{{ parent() ~ ' - ' ~ 'settings' | trans({}, 'platform') | striptags | raw }}{% endblock %}
{% import 'ClarolineCoreBundle::macros.html.twig' as macros %}
{% block breadcrumb %}
    {{
      macros.breadcrumbs([
      {
          'icon': 'fa fa-cog',
          'name': 'administration'|trans({}, 'platform'),
          'href': path('claro_admin_index')
      },
      {
          'name': 'main_settings'|trans({}, 'tools'),
          'href': '#'
      }])
    }}
{% endblock %}

{% block page_title %}
    {{ 'main_settings'|trans({}, 'tools') }}
{% endblock %}

{% block page_content %}
  <div
      class="main-settings-container"
      data-parameters="{{ parameters | json_encode | raw | escape }}"
      data-portal-resources="{{ portalResources | json_encode | raw | escape }}"
      data-availables-locales="{{ availablesLocales | json_encode | raw | escape }}"
  />
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script src="{{ hotAsset('dist/claroline-distribution-main-core-main-settings.js') }}"></script>
{% endblock %}
