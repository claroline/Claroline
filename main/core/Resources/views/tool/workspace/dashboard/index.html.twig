{% extends 'ClarolineCoreBundle:workspace:layout.html.twig' %}

{% block title %}{{ parent() ~ ' - ' ~ "analytics" | trans({}, "tools") }}{% endblock %}

{% import 'ClarolineCoreBundle::macros.html.twig' as macros %}

{% block breadcrumb %}
    {{
    macros.workspaceBreadcrumbs(
    workspace,
    [
        {
            'name': 'dashboard'|trans({}, 'platform'),
            'href': ''
        }
    ]
    )
    }}
{% endblock %}

{% block content %}
    <div
            class="page-container dashboard-container"
            data-workspace-id="{{ workspace.id | json_encode | raw | escape }}"
    >
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script src="{{ hotAsset('dist/claroline-distribution-main-core-tools-workspace-dashboard.js') }}"></script>
{% endblock %}