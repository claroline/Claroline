{% extends 'ClarolineCoreBundle:Workspace:layout.html.twig' %}

{% block title %}{{ parent() ~ ' - ' ~ "rights_management" | trans({}, "platform") | striptags | raw }}{% endblock %}

{% block breadcrumb %}
    {{
        macros.workspaceBreadcrumbs(
            workspace,
            [
                {
                    'name': 'parameters'|trans({}, 'platform'),
                    'href': path('claro_workspace_open_tool', {'workspaceId': workspace.getId(), 'toolName': 'parameters'})
                },
                {
                    'name': 'resources'|trans({}, 'platform'),
                    'href': path('claro_workspace_tool_config', {'workspace': workspace.getId(), 'tool': tool.getId()})
                },
                {
                    'name': 'creation'|trans({}, 'platform'),
                    'href': ''
                }
            ]
        )
    }}
{% endblock %}
{% block section_content %}
    <div id="data" data-workspace-id="{{ workspace.getId() }}" data-tool-id="{{ tool.getId() }}"></div>
    {% include 'ClarolineCoreBundle:Resource:rightsCreation.html.twig' %}
{% endblock %}
{% block javascripts %}
   {{ parent() }}
    <script src="{{ asset('bundles/clarolinecore/js/tool/workspace/resource_rights_creation_form.js') }}" type="text/javascript"></script>
{% endblock %}
