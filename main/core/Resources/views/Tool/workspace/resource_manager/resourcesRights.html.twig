{% extends 'ClarolineCoreBundle:Workspace:layout.html.twig' %}

{% block title %}{{ parent() ~ ' - ' ~ "resources_rights_management" | trans({}, "platform") | striptags | raw }}{% endblock %}

{% block breadcrumb %}
    {{
        macros.workspaceBreadcrumbs(
            workspace,
            [
                {
                    'name': 'parameters'|trans({}, 'platform'),
                    'href': path('claro_workspace_open_tool', {'workspaceId': workspace.getId(), 'toolName': 'parameters'})
                },
                {
                    'name': 'resources'|trans({}, 'platform'),
                    'href': ''
                }
            ]
        )
    }}
{% endblock %}
{% block section_content %}
    <div class='panel-heading'>
        <h3 class="panel-title">
            {{ 'resources' | trans({}, 'platform') }}
            <i id="root-dir-icon-edit-btn"
               class="fa fa-edit pull-right pointer-hand"
               data-node-id="{{ resource.getId() }}"
               data-toggle="tooltip"
               data-placement="left"
               title="{{ 'edit_root_directory_icon' | trans({}, 'platform') }}"
            >    
            </i>
        </h3>
    </div>
    <div class="well">
        {{ 'root_rights_change_explanation'|trans({}, 'platform') }}
    </div>
    {% include 'ClarolineCoreBundle:Tool\\workspace\\resource_manager:resourcesRightsForm.html.twig' %}
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/clarolinecore/js/tool/workspace/resource_rights_form.js') }}" type="text/javascript"></script>
{% endblock %}
